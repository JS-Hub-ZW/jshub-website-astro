---
import BaseLayout from "../layouts/BaseLayout.astro";

export let title = "Team"


/* Add Yourself to the array below to be displayed on the team page */
const teamMembers = [
    {name: "Panashe Banhire", role: "Computer Engineer | Front-End Developer", website: "", github: "", linkedin: "", },
    {name: "James Midzi", role: "Developer | Writer | Tutor | Polyglot ", website: "https://mrmidzi.netllify.app", github: "https://github.com/Psypher1", linkedin: "https://linkedin.com/in/jamesmidzi", }
]
---

<BaseLayout {title} >
    <h1 class="text-3xl font-semibold text-blue-600 mb-8">Team</h1>

    <div class="grid md:grid-cols-3 gap-4">


        {teamMembers.map((member, index) => (
            <article class="p-6 shadow-xl" >
                <h3 class="font-semibold">{member.name}</h3>
                <p class="text-[.8rem] text-gray-700 mb-4">{member.role}</p>

                <div class="flex text-sm text-gray-500">
                    <a href={member?.github}>Github</a>
                </div>
            </article>
                ))}
                </div>
</BaseLayout>