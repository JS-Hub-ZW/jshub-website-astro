---

<BaseLayout {title} >
    <h1 class="text-3xl font-semibold text-blue-600 mb-8">Team</h1>

    <div class="grid md:grid-cols-3 gap-4">


        {teamMembers.map((member, index) => (
            <article class="p-6 shadow-xl" >
                <h3 class="font-semibold">{member.name}</h3>
                <p class="text-[.8rem] text-gray-600 mb-4">{member?.role}</p>

                <div class="flex items-center gap-3 text-sm text-gray-500">
                    <a href={member?.website} target="_blank" rel="noreferrer noopener">Website</a>
                    <a href={member?.github} target="_blank" rel="noreferrer noopener">Github</a>
                    <a href={member?.linkedin} target="_blank" rel="noreferrer noopener">LinkedIn</a>
                </div>
            </article>
                ))}
                </div>
</BaseLayout>