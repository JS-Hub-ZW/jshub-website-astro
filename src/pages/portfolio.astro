---
import BaseLayout from "../layouts/BaseLayout.astro";

import portfolio from "../data/portfolio.json";

let title = 'Portfolio';
---

<BaseLayout {title}>
    <h1 class="text-3xl font-semibold text-blue-600 mb-8">Portfolio</h1>
    <section class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
        {portfolio.map(item =>(
            <article>
                <h3>{item.name}</h3>
            </article>
        ))}
    </section>
</BaseLayout>