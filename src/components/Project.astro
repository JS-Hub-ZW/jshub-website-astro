---
import {Icon}from 'astro-icon'

const {project} = Astro.props
---

<article class="p-6 shadow-xl bg-gray-50 rounded">
    <h3 class="font-semibold text-xl textGradient2">{project.name}</h3>
    <p class="text-gray-700 mb-6 text-base">{project?.description}</p>

    <div class="flex gap-3 items-center mb-6">
        {project?.technologies?.map(tech => (
            <p class="py-[.5rem] text-sm px-2 text-gray-100 rounded bg-brand4">{tech}</p>
        ))}
    </div>
    <div class="flex gap-4 mx-auto w-1/2">
        <a href={project?.liveLink}  target="_blank" rel="noreferrer noopener">
            <Icon name='ic:twotone-remove-red-eye' class='h-5 w-5'/>
        </a>
        <a href={project?.sourceCode}  target="_blank" rel="noreferrer noopener">
            <Icon name='mdi:github' class='h-5 w-5'/>
        </a>
    </div>
</article>